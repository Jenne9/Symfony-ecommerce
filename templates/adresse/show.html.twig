{% extends 'base.html.twig' %}

{% block title %}Voir adresse{% endblock %}

{% block body %}
<div class="login_register_wrap section">
    <div class="container text-dark">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10 my-5">
                <div class=" bg-white px-5 py-2">
                    <h3 class="text-center">Adresse {{ adresse.nom }}</h3>
                    <div>Rue : </div>
                    <div class="border border-secondary border-opacity-25 my-1 p-2 rounded">{{ adresse.rue }}</div>
                    <div>Complément : </div>
                    <div class="border border-secondary border-opacity-25 my-1 p-2 rounded">{{ adresse.complement }}</div>            
                    <div>Ville : </div>
                    <div class="border border-secondary border-opacity-25 my-1 p-2 rounded">{{ adresse.ville }}</div>            
                    <div>Pays : </div>
                    <div class="border border-secondary border-opacity-25 my-1 p-2 rounded">{{ adresse.pays }}</div>            
                    <div>Téléphone : </div>
                    <div class="border border-secondary border-opacity-25 my-1 p-2 rounded">{{ adresse.telephone }}</div>                    
                    <div class="d-grid gap-2 ">
                        <button class="btn btn-success mx-5 mt-5" type="button"><a class="nav-link"href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">Modifier</a></button>                    
                    </div>
                    {{ include('adresse/_delete_form.html.twig') }}
                    <div class="d-grid gap-2 ">
                        <button class="btn btn-warning mx-5 mt-2 mb-5" type="button"><a class="nav-link"href="{{ path('app_user') }}">Mon Compte</a></button>                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    
{% endblock %}
