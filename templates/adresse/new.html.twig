{% extends 'base.html.twig' %}

{% block title %}New Adresse{% endblock %}

{% block body %}
<div class="login_register_wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10 my-5">
                <div class="login_wrap">
                    <div class="padding_eight_all bg-white px-5">
                    <h3 class="text-dark text-center py-2">Ajouter une adresse</h3>
                    <div class="message-flash">
                        {% for message in app.flashes('paiement_message') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                    </div>
                        <div class="content">
                        {{ include('adresse/_form.html.twig') }}
                            <div class="d-grid gap-2 ">
                                <button class="btn btn-warning mx-5 mb-5 mt-2" type="button"><a class="nav-link"href="{{ path('app_user') }}">Mon Compte</a></button>                    
                            </div>
                        </div>                           
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
