{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié ?{% endblock %}

{% block body %}
<div class="login_register_wrap section">
    <div class="container text-dark">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap">
                    <div class="bg-white mt-5 px-5 py-3">
                        <div class="heading_s1 pt-3 text-center">
                            <h3>Mot de passe oublié ?</h3>
                        </div>
                        <div class="content">
                            <div class="message-flash">
                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                            </div>
                        </div>
                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                Saisissez l'adresse mail associée à votre compte.
                                Nous allons envoyer à cette adresse un lien vous permettant de réinitialiser facilement votre mot de passe.
                            </small>
                        </div>                
                        <button class="btn btn-warning my-3">Réinitialiser</button>
                    {{ form_end(requestForm) }}
                        
                </div>
            </div>
        </div>
    </div>
</div>

    
    

    
{% endblock %}
