{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<ul class="">
			<li>Marque : <a href="#">{{produit.marque}}</a></li>
			<li>Categorie : <a href="#">{{produit.categorie}}</a></li>
		</ul>
		<div class="product-image">
			<div class="col-lg-6 col-md-6 mb-4 mb-md-0">
				<div class="product_img_box">
					<img  style="width:20rem;" src="{{ asset ('images/produits/') ~ produit.imageName }}" alt="">
					<a href="#" class="product_img_zoom" title="Zoom">
						<span class="linearicons-zoom-in"></span>
					</a>
				</div>
			</div>
		</div>
		<div class="col-lg-6 col-md-6">
			<div class="pr_detail">
				<div class="product_description">
					<h4 class="product_title"><a href="#">{{produit.nom }}</a></h4>
					<div class="product_price">
						<span class="price">{{produit.prix}}â‚¬</span>
					</div>
				</div>
			</div>
			<div class="pr_desc">
				<p>{{produit.description|raw}}</p>
				<p>En stock : {{produit.quantite}}</p>
			</div>

			<div>
				<a class="btn btn-success" href="{{ path ('app_panier_ajout', {'id':produit.id}) }}">Ajouter au panier</a>
			</div>							
		</div>							
	</div>
</div>







{% endblock %}