{% extends 'base-backend.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}

    <a href="{{ path('app_admin_categorie_new') }}" class="btn btn-dark my-3">Nouveau</a>

    <h1>Categorie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Marque</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
        {% for marques in categorie.marques %} 
            <td>{{ marques.nom }}</td>   
        {% endfor %}   
                <td>
                    <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}"title="Voir" class="btn btn-dark">
                <i class="align-middle" data-feather="eye"></i>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}"title="Modifier" class="btn btn-success ms-2">
                <i class="align-middle" data-feather="edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
