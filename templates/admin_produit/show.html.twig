{% extends 'base-backend.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

    <a href="{{ path('app_admin_produit_index') }}" class="btn btn-dark my-3">Retour à la liste</a>

    <h1>Produit</h1>

    <div class="d-flex justify-content-end align-items-end">    
        {{ include('admin_produit/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}"title="Modifier" class="btn btn-success ms-2">
        <i class="align-middle" data-feather="edit"></i></a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description|raw }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            
            {# <tr>
                <th>Slug</th>
                <td>{{ produit.slug }}</td>
            </tr> #}
            <tr>
                <th>Photo</th>
                <td> {% if produit.imageName is defined and produit.imageName is not null %}
                    <img src="{{ asset ('images/produits/' ~ produit.imageName) }}" alt="{{produit.nom}}" class="img-fluid">
                    {% else %}
                        N/A
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ produit.updatedAt ? produit.updatedAt|date('d-m-Y H:i:s') : 'N/A' }}</td>
            </tr>
        </tbody>
    </table>

    
    

{% endblock %}
