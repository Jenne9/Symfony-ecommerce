{% extends 'base.html.twig' %}

{% block title %}Modification du profil de {{ app.user.nom | upper }} {{ app.user.prenom | upper }}{% endblock %}

{% block body %}
    <div class="row text-dark justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-center">
                    <h3>Modification du profil de {{ app.user.nom | upper }} {{ app.user.prenom | upper }}</h3>
                </div>
                <div class="card-body text-center">
                    {% for message in app.flashes ('success') %}                                
                    <div class="alert alert-success">           
                        {{ message }}                        
                    </div>                                
                {% endfor %}
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 bg-light mb-5">
                        {{ form (form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}